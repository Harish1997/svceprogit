<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/finalcard"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="50dp"
    app:cardElevation="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#da07dbfc"
        android:padding="16dp">

        <ImageView
            android:id="@+id/finalimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ccd" />

        <TextView
            android:id="@+id/svceimgtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/finalimg"
            android:layout_toEndOf="@+id/finalimg"
            android:layout_toRightOf="@+id/finalimg"
            android:text="TextView" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/svceimgtitle"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/finalimg"
            android:layout_toRightOf="@+id/finalimg"
            android:text="TextView" />

    </RelativeLayout>

</android.support.v7.widget.CardView>